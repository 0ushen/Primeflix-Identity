@model IdentityServer.ViewModels.Auth.RegisterViewModel

<div class="main">
    <section class="signup">
       <div class="container">
           <div class="signup-content">
               <div class="signup-form">
                   <h2 class="form-title">Sign up</h2>
                   <form asp-controller="Auth" asp-action="Register" method="post" class="register-form" id="register-form">
                       <div asp-validation-summary="ModelOnly" class="form-group color-error"></div>
                       <input asp-for="ReturnUrl"/>
                       <div class="form-group">
                           <label asp-for="Username"><i class="zmdi zmdi-account material-icons-name"></i></label>
                           <input asp-for="Username" id="name" placeholder="Your Username"/>
                           <span asp-validation-for="Username" class="color-error"></span>
                       </div>
                       <div class="form-group">
                           <label asp-for="Email"><i class="zmdi zmdi-email"></i></label>
                           <input asp-for="Email" id="name" placeholder="Your Email"/>
                           <span asp-validation-for="Email" class="color-error"></span>
                       </div>
                       <div class="form-group">
                           <label asp-for="Password"><i class="zmdi zmdi-lock"></i></label>
                           <input asp-for="Password" id="pass" placeholder="Password"/>
                           <span asp-validation-for="Password" class="color-error"></span>
                       </div>
                       <div class="form-group">
                           <label asp-for="ConfirmPassword"><i class="zmdi zmdi-lock-outline"></i></label>
                           <input asp-for="ConfirmPassword" id="re_pass" placeholder="Repeat your password"/>
                           <span asp-validation-for="ConfirmPassword" class="color-error"></span>
                       </div>
                       <div class="form-group">
                           <input asp-for="AgreeTerms" id="agree-term" class="agree-term"/>
                           <label asp-for="AgreeTerms" class="label-agree-term"><span><span></span></span>I agree all statements in <a href="#" class="term-service">Terms of service</a></label>
                           <span asp-validation-for="AgreeTerms" class="color-error"></span>
                       </div>
                       <div class="form-group form-button">
                           <input type="submit" name="signup" id="signup" class="form-submit" value="Register"/>
                       </div>
                   </form>
               </div>
               <div class="signup-image">
                   <figure><img src="~/images/logo_transparent.png" alt="sing up image"></figure>
                   <a asp-controller="Auth" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl" class="signup-image-link">I am already member</a>
               </div>
           </div>
       </div>
    </section>
</div>