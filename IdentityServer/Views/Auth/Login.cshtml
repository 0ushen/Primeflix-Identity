@model IdentityServer.ViewModels.Auth.LoginViewModel 

<div class="main">
    <section class="sign-in">
        <div class="container">
            <div class="signin-content">
                <div class="signin-image">
                    <figure><img src="~/images/logo_transparent.png" alt="sing up image"></figure>
                    <a asp-controller="Auth" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl" class="signup-image-link">Create an account</a>
                    <a asp-controller="Auth" asp-action="RetrievePassword" asp-route-returnUrl="@Model.ReturnUrl" class="signup-image-link">Forgot your password ?</a>
                </div>
                <div class="signin-form">
                    <h2 class="form-title">Sign in</h2>
                    <form method="POST" class="register-form" id="login-form">
                        <div asp-validation-summary="ModelOnly" class="form-group color-error"></div>
                        <input asp-for="ReturnUrl"/>
                        <div class="form-group">
                            <label asp-for="Username"><i class="zmdi zmdi-account material-icons-name"></i></label>
                            <input asp-for="Username" id="your_name" placeholder="Your Username"/>
                            <span asp-validation-for="Username" class="color-error"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"><i class="zmdi zmdi-lock"></i></label>
                            <input asp-for="Password" id="your_pass" placeholder="Password"/>
                            <span asp-validation-for="Password" class="color-error"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="StaySignedIn" id="remember-me" class="agree-term"/>
                            <label asp-for="StaySignedIn" class="label-agree-term"><span><span></span></span>Remember me</label>
                            <span asp-validation-for="StaySignedIn" class="color-error"></span>
                        </div>
                        <div class="form-group form-button">
                            <input type="submit" name="signin" id="signin" class="form-submit" value="Log in"/>
                        </div>
                    </form>
                    <div class="social-login">
                        <span class="social-label">Or login with</span>
                        <ul class="socials">
                            <li>
                                <a asp-controller="Auth" 
                                   asp-action="ExternalLogin" 
                                   asp-route-returnUrl="@Model.ReturnUrl" 
                                   asp-route-provider="@Model.ExternalProviders.First().Name">
                                    <i class="display-flex-center zmdi zmdi-google"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>