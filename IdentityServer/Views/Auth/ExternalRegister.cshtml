@model IdentityServer.ViewModels.Auth.ExternalRegisterViewModel


<div class="main">
    <section class="signup">
       <div class="container">
           <div class="signup-content">
               <div class="signup-form">
                   <h2 class="form-title">Sign up</h2>
                   <form asp-controller="Auth" asp-action="ExternalRegister" method="post" class="register-form" id="register-form">
                       <div asp-validation-summary="ModelOnly" class="form-group color-error"></div>
                       <input type="hidden" asp-for="ReturnUrl"/>
                       <div class="form-group">
                           <label asp-for="Username"><i class="zmdi zmdi-account material-icons-name"></i></label>
                           <input asp-for="Username" id="name" placeholder="Your Username"/>
                           <span asp-validation-for="Username" class="color-error"></span>
                       </div>
                       <div class="form-group form-button">
                           <input type="submit" name="signup" id="signup" class="form-submit" value="Sign Up"/>
                       </div>
                   </form>
               </div>
               <div class="signup-image">
                   <figure><img src="~/images/logo_transparent.png" alt="sing up image"></figure>
               </div>
           </div>
       </div>
    </section>
</div>